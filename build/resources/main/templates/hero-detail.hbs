{{#partial "content"}}
    <link rel='stylesheet' href='/css/hero-detail.css'>

        <div class="detail" >
            <a href="/hero-form">Add new Hero to list</a>
        {{#each hero}}
            <p>Name:{{ name }}</p>
            <p>Age:{{ age }}</p>
            <p>Powers:{{ powers }}</p>
            <p>Weakness:{{ weakness }}</p>
            <p>Id:{{id}}</p>
        <hr>
            <p>
                {{#if post.published }}
                    <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Published
                {{/if}}
            </p>
        {{/each}}
        </div>

{{/partial}}

{{> layout.hbs}}